{
  "manifest_version": 2,
  "name": "Battery Warning",
  "short_name": "Battery Warning",
  "description": "Configurable notifications based on the device's battery",
  "version": "0.0.1",
  "minimum_chrome_version": "38",

  "background": {
    "persistent": false,
    "scripts": ["jquery-2.1.3.min.js","monitor.js"]
  },
  "icons": {
    "16": "assets/icon_16.png",
    "128": "assets/icon_128.png"
  },
  "permissions": [
    "notifications",
    "storage"
  ],
  "options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}
