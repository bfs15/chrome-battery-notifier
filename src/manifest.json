{
  "manifest_version": 2,
  "name": "Battery Notifier",
  "short_name": "Battery Notifier",
  "description": "A small, configurable low battery notifier",
  "version": "0.1.2",
  "minimum_chrome_version": "38",
  "content_security_policy": "script-src 'self' 'sha256-ujGikXw5k6d5Q1jwExsq61TQ7NidN0vGLotrsDgDfEQ='; object-src 'self'",
  "background": {
    "persistent": false,
    "page": "background.html"
  },
  "icons": {
    "16": "assets/icon_16.png",
    "48": "assets/icon_48.png",
    "128": "assets/icon_128.png"
  },
  "permissions": [
    "notifications",
    "storage"
  ],
  "options_page": "options.html",
  "options_ui": {
    "scripts": ["jquery-2.1.3.min.js"],
    "page": "options.html",
    "chrome_style": true
	}
}
