{
  "manifest_version": 2,
  "name": "Battery Notifier",
  "short_name": "Battery Notifier",
  "description": "A small, configurable low battery notifier",
  "version": "0.1.2",
  "minimum_chrome_version": "38",

  "background": {
    "persistent": false,
    "scripts": ["jquery-2.1.3.min.js","monitor.js"]
  },
  "icons": {
    "16": "assets/icon_16.png",
    "48": "assets/icon_48.png",
    "128": "assets/icon_128.png"
  },
  "permissions": [
    "notifications",
    "storage"
  ],
  "options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}
